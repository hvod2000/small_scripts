#!/bin/sh -e


while true; do
	sleep 100
	app=$(xdotool getactivewindow getwindowname | sed -e "s@/@â•±@g")
	date=$(date +"%Y-%m-%d")
	time=$(date +"%T")
	path=~/Pictures/Screenshots/"What I was doing that day?/$date/$time $app.png"
	echo "Saving $path..."
	mkdir -p "$(dirname "$path")"
	imlib2_grab "$path"
	echo "[ OK ] $path"
	sleep $((900 - 100))
done
